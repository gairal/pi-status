  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gairal/pi-status/issues"
  },
  "homepage": "https://github.com/gairal/pi-status#readme",
  "dependencies": {
    "@koa/router": "^9.4.0",
    "date-fns": "^2.15.0",
    "dotenv": "^8.2.0",
    "koa": "^2.13.0",
    "koa-static": "^5.0.0",
    "pm2": "^5.2.0",
    "socket.io": "^2.3.0",
    "systeminformation": "^4.26.10",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.2",
