{
  "name": "pi-status",
  "version": "1.0.0",
  "description": "Status page for my pi",
  "main": "dist",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "debug": "npx nodemon",
    "dev": "node --inspect -r ts-node/register ./src/index.ts",
    "format": "npx prettier --write",
    "lint": "npx eslint ./src/**/*.ts",
    "start": "npm run debug",
    "test": "NODE_ENV=test npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gairal/pi-status.git"
  },
